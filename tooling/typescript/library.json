{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "FoodWagen Library",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}


